<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:id="@+id/list_layout">

   <ImageView
      android:id="@+id/profilePic_iv"
       android:layout_width="120dp"
       android:layout_height="120dp"
       android:layout_margin="5dp"
       android:scaleType="centerCrop"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       />
    <TextView
        android:id="@+id/imePrezime_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/profilePic_iv"
        app:layout_constraintTop_toTopOf="@id/profilePic_iv"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:text="Ime i Prezime"/>
    <TextView
        android:id="@+id/about_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@id/profilePic_iv"
        app:layout_constraintTop_toBottomOf="@id/imePrezime_tv"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:text="Klikni za poveke"/>




</androidx.constraintlayout.widget.ConstraintLayout>